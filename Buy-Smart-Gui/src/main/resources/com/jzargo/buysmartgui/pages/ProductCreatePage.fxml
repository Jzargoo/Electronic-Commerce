<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.jzargo.buysmartgui.ui.ProductCreatePageController"
>
    <center>
        <ScrollPane fitToWidth="true">
            <VBox spacing="20" maxWidth="800" alignment="TOP_CENTER">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>

                <Label text="Создание продукта" style="-fx-font-size: 24px; -fx-font-weight: bold;" />

                <GridPane hgap="20" vgap="15">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="30"/>
                        <ColumnConstraints percentWidth="70"/>
                    </columnConstraints>

                    <Label text="Название:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                    <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1" />

                    <Label text="Цена:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                    <TextField fx:id="priceField" GridPane.rowIndex="1" GridPane.columnIndex="1" />

                    <Label text="Категория:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                    <ComboBox fx:id="categoryCombo" GridPane.rowIndex="2" GridPane.columnIndex="1" prefWidth="Infinity"/>

                    <Label text="Теги:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
                    <FlowPane fx:id="tagsFlow" GridPane.rowIndex="3" GridPane.columnIndex="1" hgap="10" vgap="10" />

                    <Label text="Описание:" GridPane.rowIndex="4" GridPane.columnIndex="0" />
                    <TextArea fx:id="descriptionArea" prefRowCount="4" GridPane.rowIndex="4" GridPane.columnIndex="1" />

                    <Label text="Спецификация:" GridPane.rowIndex="5" GridPane.columnIndex="0" />
                    <TextArea fx:id="specArea" prefRowCount="4" GridPane.rowIndex="5" GridPane.columnIndex="1" />

                    <Label text="Фото:" GridPane.rowIndex="6" GridPane.columnIndex="0" />
                    <VBox spacing="10" GridPane.rowIndex="6" GridPane.columnIndex="1">
                        <ImageView fx:id="imagePreview" fitHeight="150" fitWidth="150" preserveRatio="true" />
                        <Button text="Загрузить фото" onAction="#onUploadImage" />
                    </VBox>

                </GridPane>

                <Button text="Создать продукт" fx:id="createButton" maxWidth="200"
                        style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;" />

            </VBox>
        </ScrollPane>
    </center>
</BorderPane>