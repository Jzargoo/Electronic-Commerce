<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane style="-fx-background-color: #32132;" styleClass="AuthBackground" stylesheets="@../main.css" xmlns="http://javafx.com/javafx/24" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.jzargo.buysmartgui.ui.pages.RegisterPageController">
   <center>
      <VBox alignment="CENTER">
         <children>
            <HBox alignment="CENTER" fillHeight="false" maxWidth="-Infinity" style="-fx-background-color: #181818;" styleClass="rounding" VBox.vgrow="NEVER">
               <children>
                  <VBox alignment="CENTER" spacing="20.0" HBox.hgrow="NEVER">
                     <children>
                        <HBox layoutX="10.0" layoutY="250.0">
                           <children>
                              <Button fx:id="back" mnemonicParsing="false" text="&lt;- back">
                                 <styleClass>
                                    <String fx:value="CancelButton" />
                                    <String fx:value="standard-Font-Style" />
                                 </styleClass>
                              </Button>
                           </children>
                        </HBox>
                        <VBox spacing="10.0">
                           <children>
                              <Label styleClass="standard-Font-Style" text="Phone or email" />
                              <TextField fx:id="emailOrPhone" maxWidth="200.0" minWidth="200.0" prefWidth="200.0">
                                 <styleClass>
                                    <String fx:value="standard-Font-Style" />
                                    <String fx:value="secondary-bg" />
                                 </styleClass>
                              </TextField>
                              <Label styleClass="standard-Font-Style" text="Username" />
                              <TextField fx:id="username" maxWidth="200.0" minWidth="200.0" prefWidth="200.0">
                                 <styleClass>
                                    <String fx:value="standard-Font-Style" />
                                    <String fx:value="secondary-bg" />
                                 </styleClass>
                              </TextField>
                              <Label styleClass="standard-Font-Style" text="Password" />
                              <TextField fx:id="password" maxWidth="200.0" minWidth="200.0" prefWidth="200.0">
                                 <styleClass>
                                    <String fx:value="standard-Font-Style" />
                                    <String fx:value="secondary-bg" />
                                 </styleClass>
                              </TextField>
                              <Label styleClass="standard-Font-Style" text="Confirm Password" />
                              <TextField fx:id="confirmPassword" maxWidth="200.0" minWidth="200.0" prefWidth="200.0">
                                 <styleClass>
                                    <String fx:value="secondary-bg" />
                                    <String fx:value="standard-Font-Style" />
                                 </styleClass>
                              </TextField>
                           </children>
                        </VBox>
                        <HBox alignment="CENTER">
                           <children>
                              <Button mnemonicParsing="false" onAction="#sendRegisterRequest" text="sign up">
                                 <styleClass>
                                    <String fx:value="ConfirmationButton" />
                                    <String fx:value="standard-Font-Style" />
                                 </styleClass>
                              </Button>
                           </children>
                        </HBox>
                     </children>
                     <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </padding>
                  </VBox>
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
</BorderPane>
