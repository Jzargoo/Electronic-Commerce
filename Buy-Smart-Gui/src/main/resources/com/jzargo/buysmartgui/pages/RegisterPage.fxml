<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/24" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.jzargo.buysmartgui.ui.RegisterPageController">
   <center>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <VBox alignment="CENTER" VBox.vgrow="NEVER">
               <children>
                  <Label text="buy-smart">
                     <VBox.margin>
                        <Insets bottom="12.0" top="12.0" />
                     </VBox.margin>
                  </Label>
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </VBox>
            <VBox alignment="CENTER" VBox.vgrow="ALWAYS">
               <children>
                  <Label text="Email or Phone" VBox.vgrow="ALWAYS">
                     <VBox.margin>
                        <Insets right="130.0" />
                     </VBox.margin>
                  </Label>
                  <TextField fx:id="emailOrPhone" VBox.vgrow="ALWAYS" />
                  <Label text="username" VBox.vgrow="ALWAYS">
                     <VBox.margin>
                        <Insets right="160.0" top="20.0" />
                     </VBox.margin>
                  </Label>
                  <TextField fx:id="username" VBox.vgrow="ALWAYS" />
                  <Label text="password" VBox.vgrow="ALWAYS">
                     <VBox.margin>
                        <Insets right="160.0" top="20.0" />
                     </VBox.margin>
                  </Label>
                  <TextField fx:id="password" VBox.vgrow="ALWAYS" />
                  <Label text="confirm password" VBox.vgrow="ALWAYS">
                     <VBox.margin>
                        <Insets right="120.0" top="20.0" />
                     </VBox.margin>
                  </Label>
                  <TextField fx:id="confirmPassword" VBox.vgrow="ALWAYS" />
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="40.0">
                     <children>
                        <Button mnemonicParsing="false" onAction="#sendRegisterRequest" text="sign up" />
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="10.0" left="100.0" right="100.0" top="10.0" />
               </padding>
            </VBox>
         </children>
      </VBox>
   </center>
</BorderPane>
