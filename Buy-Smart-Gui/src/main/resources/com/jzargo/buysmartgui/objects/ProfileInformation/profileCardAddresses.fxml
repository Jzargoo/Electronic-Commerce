<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox maxHeight="600.0" stylesheets="@../../main.css" xmlns="http://javafx.com/javafx/24" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.jzargo.buysmartgui.ui.template.dialog.profileCards.ProfileCardAddressesController">
   <children>
      <TableView fx:id="addressTable" style="-fx-background-color: black;" styleClass="standard-Font-Style" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="countryColumn" prefWidth="75.0" text="Country" />
            <TableColumn fx:id="cityColumn" prefWidth="75.0" text="City" />
          <TableColumn fx:id="streetColumn" prefWidth="75.0" text="street" />
          <TableColumn fx:id="postcodeColumn" prefWidth="75.0" text="postcode" />
        </columns>
      </TableView>
      <VBox alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onAction="#handleAddAddress" styleClass="view" text="Add address" />
         </children>
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </VBox>
   </children>
   <styleClass>
      <String fx:value="rounding" />
      <String fx:value="secondary-bg" />
   </styleClass>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
