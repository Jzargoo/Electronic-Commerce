<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox xmlns="http://javafx.com/javafx/24" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.jzargo.buysmartgui.ui.template.dialog.profileCards.UserInformationCard">
   <children>
      <VBox maxHeight="150.0" maxWidth="300.0" prefHeight="150.0" prefWidth="300.0" spacing="20.0" stylesheets="@../../main.css">
         <children>
            <HBox spacing="20.0">
               <children>
                  <Button fx:id="time" mnemonicParsing="false" prefHeight="50.0" prefWidth="50.0" text="A" />
                  <Button fx:id="phone" mnemonicParsing="false" prefHeight="50.0" prefWidth="50.0" text="P" />
                  <Button fx:id="email" mnemonicParsing="false" prefHeight="50.0" prefWidth="50.0" text="E" />
                  <Button fx:id="username" mnemonicParsing="false" prefHeight="50.0" prefWidth="50.0" text="U" />
               </children>
            </HBox>
            <HBox alignment="CENTER">
               <children>
                  <HBox alignment="CENTER" HBox.hgrow="ALWAYS">
                     <children>
                        <Label fx:id="field" styleClass="standard-Font-Style" text="Label:" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" HBox.hgrow="ALWAYS">
                     <children>
                        <Label fx:id="value" styleClass="standard-Font-Style" text="Label" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" HBox.hgrow="ALWAYS">
                     <children>
                        <Button mnemonicParsing="false" styleClass="view" text="Change" />
                     </children>
                  </HBox>
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         <styleClass>
            <String fx:value="secondary-bg" />
            <String fx:value="rounding" />
         </styleClass>
      </VBox>
   </children>
</HBox>
