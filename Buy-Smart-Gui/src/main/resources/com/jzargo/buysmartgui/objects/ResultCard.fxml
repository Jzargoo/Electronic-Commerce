<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox maxHeight="250.0" maxWidth="250.0" stylesheets="@../main.css" xmlns="http://javafx.com/javafx/24" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.jzargo.buysmartgui.ui.ResultCardController">
   <children>
      <ImageView fx:id="image" fitHeight="200.0" fitWidth="200.0" pickOnBounds="true" />
      <Label fx:id="name" styleClass="standard-Font-Style" text="name">
         <font>
            <Font size="11.0" />
         </font>
         <VBox.margin>
            <Insets top="5.0" />
         </VBox.margin></Label>
      <HBox>
         <VBox HBox.hgrow="ALWAYS">
            <Label fx:id="price" styleClass="standard-Font-Style" text="Price">
               <VBox.margin>
                  <Insets top="5.0" />
               </VBox.margin></Label>
         </VBox>
         <VBox HBox.hgrow="ALWAYS" />
      </HBox>
      <VBox alignment="CENTER">
         <children>
            <Button contentDisplay="CENTER" mnemonicParsing="false" styleClass="view" stylesheets="@../main.css" text="Add to chart" VBox.vgrow="ALWAYS" />
            <Button mnemonicParsing="false" onAction="#loadProductDetails" styleClass="view" text="view">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Button>
         </children>
         <VBox.margin>
            <Insets top="5.0" />
         </VBox.margin>
      </VBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
   <styleClass>
      <String fx:value="secondary-bg" />
      <String fx:value="rounding" />
   </styleClass>
</VBox>
