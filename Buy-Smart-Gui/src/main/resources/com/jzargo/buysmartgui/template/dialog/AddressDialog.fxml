<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane stylesheets="@../../main.css" xmlns="http://javafx.com/javafx/24" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.jzargo.buysmartgui.ui.template.dialog.AddressController">
   <center>
      <VBox spacing="20.0" styleClass="secondary-bg" BorderPane.alignment="CENTER">
         <children>
            <VBox fx:id="fieldContainer" alignment="CENTER" spacing="10.0">
               <children>
                  <TextField fx:id="countryField" promptText="country" style="-fx-background-color: #181818;">
                     <styleClass>
                        <String fx:value="rounding" />
                        <String fx:value="standard-Font-Style" />
                     </styleClass>
                  </TextField>
                  <TextField fx:id="cityField" promptText="city" style="-fx-background-color: #181818;">
                     <styleClass>
                        <String fx:value="rounding" />
                        <String fx:value="standard-Font-Style" />
                     </styleClass>
                  </TextField>
                  <TextField fx:id="streetField" promptText="street" style="-fx-background-color: #181818;">
                     <styleClass>
                        <String fx:value="rounding" />
                        <String fx:value="standard-Font-Style" />
                     </styleClass>
                  </TextField>
                  <TextField fx:id="postcodeField" promptText="postcode" style="-fx-background-color: #181818;">
                     <styleClass>
                        <String fx:value="rounding" />
                        <String fx:value="standard-Font-Style" />
                     </styleClass>
                  </TextField>
               </children></VBox>
            <VBox alignment="CENTER">
               <children>
                  <Button fx:id="submit" mnemonicParsing="false" styleClass="view" text="Add" />
               </children>
            </VBox>
         </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
         </padding>
      </VBox>
   </center>
</BorderPane>
