<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane stylesheets="@../../main.css" xmlns="http://javafx.com/javafx/24" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.jzargo.buysmartgui.ui.template.dialog.SettingsController">
   <center>
      <VBox styleClass="secondary-bg" stylesheets="@../../main.css" BorderPane.alignment="CENTER">
         <children>
            <VBox fx:id="content" />
         </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <padding>
            <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
         </padding>
      </VBox>
   </center>
   <left>
      <VBox alignment="TOP_CENTER" style="-fx-background-color: #181818;">
         <children>
            <Hyperlink styleClass="standard-Font-Style" text="General" />
         </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <padding>
            <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
         </padding>
      </VBox>
   </left>
   <bottom>
      <HBox alignment="CENTER_RIGHT" spacing="20.0" style="-fx-background-color: #181818;" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" fx:id="cancelButton" style="-fx-background-color: #FF5733;" styleClass="standard-Font-Style" text="Button" />
            <Button mnemonicParsing="false" style="-fx-background-color: #0096FF;" fx:id="saveButton" styleClass="standard-Font-Style" text="Button" />
         </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </bottom>
</BorderPane>
