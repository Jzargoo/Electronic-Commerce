<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<HBox alignment="CENTER" style="-fx-background-color: #323232;" VBox.vgrow="NEVER" xmlns="http://javafx.com/javafx/24" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.jzargo.buysmartgui.ui.BannerController">
    <HBox alignment="CENTER">
        <HBox.margin>
            <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
        </HBox.margin>
        <ImageView fitHeight="29.0" fitWidth="29.0" pickOnBounds="true" preserveRatio="true" />
        <Hyperlink styleClass="header" stylesheets="@main.css" text="buy-smart">
            <font>
                <Font name="FreeSans Bold" size="17.0" />
            </font>
            <HBox.margin>
                <Insets />
            </HBox.margin>
        </Hyperlink>
    </HBox>
    <TextField fx:id="product" onAction="#ProductListLoad" promptText="Search for products" style="-fx-background-color: #181818;" styleClass="search" HBox.hgrow="ALWAYS">
        <HBox.margin>
            <Insets left="30.0" right="30.0" />
        </HBox.margin>
    </TextField>
    <HBox alignment="CENTER_RIGHT">
        <VBox style="-fx-background-image: transparent;" HBox.hgrow="NEVER">
            <cursor>
                <Cursor fx:constant="DEFAULT"/>
            </cursor>
            <ImageView fitHeight="49.0" fitWidth="29.0" pickOnBounds="true" preserveRatio="true"
                       style="-fx-background-opacity: 0.0;">
                <Image url="@Images/headerAndFooter/images.png"/>
            </ImageView>
        </VBox>
        <ImageView fitHeight="29.0" fitWidth="29.0" pickOnBounds="true" preserveRatio="true">
            <HBox.margin>
                <Insets left="5.0" right="3.0" />
            </HBox.margin>
        </ImageView>
        <ImageView fitHeight="29.0" fitWidth="29.0" pickOnBounds="true" preserveRatio="true">
            <HBox.margin>
                <Insets left="3.0" right="10.0" />
            </HBox.margin>
        </ImageView>
    </HBox>
</HBox>
